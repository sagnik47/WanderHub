// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  preferences   Json?     // User preferences (interests, budget, etc.)
  location      Json?     // Current location { lat, lng }
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  surveys       UserSurvey[]
  favorites     UserFavorite[]
  visits        UserVisit[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Destination {
  id          String   @id @default(cuid())
  placeId     String   @unique // Google Places API place_id
  name        String
  description String?  @db.Text
  category    String   // beaches, hills, temples, waterfalls, etc.
  address     String?
  latitude    Float
  longitude   Float
  rating      Float?
  priceLevel  Int?     // 0-4 (Google Places price level)
  photos      Json?    // Array of photo references
  amenities   Json?    // Array of amenities
  website     String?
  phoneNumber String?
  openingHours Json?   // Opening hours data
  popularityScore Int  @default(0) // For ranking
  lastAccessedAt DateTime? // For cache invalidation
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  hotels      Hotel[]
  transports  Transport[]
  favorites   UserFavorite[]
  visits      UserVisit[]

  @@index([category])
  @@index([latitude, longitude])
  @@map("destinations")
}

model Hotel {
  id          String   @id @default(cuid())
  destinationId String
  name        String
  price       Float
  currency    String   @default("USD")
  provider    String   // booking.com, agoda, etc.
  bookingUrl  String   @db.Text
  rating      Float?
  imageUrl    String?
  amenities   Json?    // Array of amenities
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  destination Destination @relation(fields: [destinationId], references: [id], onDelete: Cascade)

  @@index([destinationId])
  @@map("hotels")
}

model Transport {
  id          String   @id @default(cuid())
  destinationId String
  type        String   // flight, train, bus, car
  provider    String   // airline, booking platform
  price       Float
  currency    String   @default("USD")
  bookingUrl  String   @db.Text
  duration    String?  // e.g., "2h 30m"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  destination Destination @relation(fields: [destinationId], references: [id], onDelete: Cascade)

  @@index([destinationId])
  @@map("transports")
}

model UserSurvey {
  id          String   @id @default(cuid())
  userId      String   @unique
  interests   String[] // Array of interests
  budget      String?  // low, medium, high, luxury
  travelStyle String?  // solo, couple, family, group
  preferredCategories String[] // Preferred destination categories
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_surveys")
}

model UserFavorite {
  id          String   @id @default(cuid())
  userId      String
  destinationId String
  createdAt   DateTime @default(now())

  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  destination Destination @relation(fields: [destinationId], references: [id], onDelete: Cascade)

  @@unique([userId, destinationId])
  @@index([userId])
  @@map("user_favorites")
}

model UserVisit {
  id          String   @id @default(cuid())
  userId      String
  destinationId String
  visitedAt   DateTime @default(now())
  notes       String?  @db.Text

  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  destination Destination @relation(fields: [destinationId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([destinationId])
  @@map("user_visits")
}


